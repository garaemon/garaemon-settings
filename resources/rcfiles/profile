# -*- mode: shell-script -*-
# if running bash
if [ -n "$BASH_VERSION" ]; then
    # exec zsh if zsh exists
    [ -x /usr/local/bin/zsh ] && exec /usr/local/bin/zsh
    [ -x /usr/bin/zsh ] && exec /usr/bin/zsh
    [ -x /bin/zsh ] && exec /bin/zsh
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
        . "$HOME/.bashrc"
    fi
fi
                                
