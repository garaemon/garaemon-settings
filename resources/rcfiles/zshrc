function e() {
    # If the argument contains :
    emacsclient -n $(echo $1 | cut -f1 -d:)
    tmux display-message -p '#I' > ~/.emacs.d/emacsclient-window
    tmux select-window -t $(tmux list-windows -F "#{window_id}:#{window_name}" | grep -e 'emacs$' \
                                | cut -d ':' -f1)
}

